<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="tshreader.Views.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:tshreader.Views.Books"
    Shell.FlyoutBehavior="Disabled">

    <Tab Title="Books">

        <ShellContent Title="All"
                      ContentTemplate="{DataTemplate local:AllBooksPage}"
                      Route="AllBooks" />

        <ShellContent Title="Recent"
                      ContentTemplate="{DataTemplate local:RecentBooksPage}"
                      Route="RecentBooks" />

    </Tab>

</Shell>
