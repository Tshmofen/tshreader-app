<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="tshreader.Views.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:books="clr-namespace:tshreader.Views.Books"
    xmlns:common="clr-namespace:tshreader.Views.Common"
    Shell.FlyoutBehavior="Disabled">

    <Tab Title="Books" Route="Books">

        <ShellContent Title="All"
                      ContentTemplate="{DataTemplate books:AllBooksPage}"
                      Route="AllBooks" />

        <ShellContent Title="Recent"
                      ContentTemplate="{DataTemplate books:RecentBooksPage}"
                      Route="RecentBooks" />

        <ShellContent Title="Settings"
                      ContentTemplate="{DataTemplate common:SettingsPage}"
                      Route="Settings" />

    </Tab>

</Shell>
